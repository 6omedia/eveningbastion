extends admin_layout

block content
	h1 Add a user
	.form
		.row
			.col-sm-6
				ul.list
					li
						label Full Name
						input(type="text", id="q_name")
					li
						label Email
						input(type="text", id="q_email")
					li
						label Password
						input(type="password", id="q_password")
					li
						label Confirm Password
						input(type="password", id="q_passwordconfirm")
					li
						label User Role
						select(id="userRole_selected")
							option(value="") - select a user role - 
							option(value="admin") Admin
							option(value="subscriber") Subscriber
							option(value="visitor") Visitor
					
					#permissionsBox
						h2 Permissions
						ul.list
							li
								input(type="checkbox", value="manage_posts", id="perm1") 
								label(for="perm1") Manage Posts
							li
								input(type="checkbox", value="manage_users", id="perm2") 
								label(for="perm2") Manage Users

				p.btn(href="", id="send_btn") Submit
				img#spin(src="/static/img/spin.gif")
				#error_box
				#successBox